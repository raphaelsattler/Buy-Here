<div class="row">
  <div class="container col-md-12 card">
      <div class="text-center card-header d-flex justify-content-between" id="form-head">
        <div>
          <h1><%= t('activerecord.product.form.title.search') %></h1> 
        </div>
      </div>
      <div class="form-group card-body">
      <%= search_form_for @q, url: search_products_path, html: { method: :get } do |f| %>
          <div class="form-group">
            <%= f.label :name_cont, t('activerecord.product.form.name') %>
            <%= f.search_field :name_cont, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :code_cont, t('activerecord.product.form.code') %>
            <%= f.search_field :code_cont, class: "form-control" %>
          </div>
          <%= f.submit class: "btn btn-md btn-success" %>
      <% end %>
    </div>
  </div>
</div>
