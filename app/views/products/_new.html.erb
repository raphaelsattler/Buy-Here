<div class="row">
  <div class="card-body">
    <div class="row">
      <div class="col-md-12">
          <div class="float-right col-md-3">
           <%= button_new_helper t('activerecord.product.form.new'), 'collapseForm' %>
          </div>
      </div>
    </div>
      <div class="row">
        <div class="col-md-6 offset-md-3">
        <div class="collapse" id="collapseForm">
          <div class="alert alert-danger d-none" id="activerecord-errors"> </div>
          <%= form_with model: @product, scope: :product, class:'form-group', method: :post do |f| %>
            <div class="form-group">
              <%= f.label t('activerecord.product.form.code') %>
              <%= f.text_field :code, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label t('activerecord.product.form.name') %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label t('activerecord.product.form.description') %>
              <%= f.text_field :description, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label t('activerecord.product.form.value') %>
              <%= f.text_field :value, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit t('activerecord.product.form.save'), class: 'btn btn-info' %>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>