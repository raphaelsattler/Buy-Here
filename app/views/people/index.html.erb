<%= search_form_for @q, url: search_people_path,
                        html: { method: :post } do |f| %>
  <%= f.label t(:name) %>
  <%= f.search_field :name_cont %>
  <%= f.label t(:social_name) %>
  <%= f.search_field :social_name_cont %>
  <%= f.label t(:rg) %>
  <%= f.search_field :rg_cont %>
  <%= f.label t(:cpf) %>
  <%= f.search_field :cpf_cont %>
  <%= f.label t(:email) %>
  <%= f.search_field :email_cont %>
  <%= f.label t(:profile) %>
  <%= f.collection_select(:profile_name_cont, Profile.all, :name, :name, include_blank: true) %>
  <%= f.label t(:buy_intention) %>
  <%= f.collection_select(:buy_intention_name_cont, BuyIntention.all, :name, :name, include_blank: true) %>

  <%= f.submit %>
<% end %>

<br/>
<%= render 'list' %>

