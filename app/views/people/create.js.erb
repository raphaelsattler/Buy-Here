<% if @person.save %>
  $("#list_content").prepend("<%= j render @person %>");
  $("#list_content > tr:last-child").remove();
  $("#activerecord-errors").addClass("d-none");
<% else %>
  $("#activerecord-errors").removeClass("d-none");
  $("#activerecord-errors").html("<%= j error_messages_helper(@person.errors.full_messages) %>");
<% end %>
