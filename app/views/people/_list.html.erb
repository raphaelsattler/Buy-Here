<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead class="table-head">
          <tr>
              <th>
            <%= sort_link(@q, :email) do %>
                <strong class="column-name"><%= t :email %></strong>
            <% end %>
              </th>
              <th>
            <%= sort_link(@q, :name) do %>
                <strong class="column-name"><%= t :name %></strong>
            <% end %>
              </th>
              <th>
            <%= sort_link(@q, :rg) do %>
                <strong class="column-name"><%= t :rg %></strong>
            <% end %>
              </th>
              <th>
            <%= sort_link(@q, :cpf) do %>
                <strong class="column-name"><%= t :cpf %></strong>
            <% end %>
              </th>
              <th>
            <%= sort_link(@q, :telephone) do %>
                <strong class="column-name"><%= t :telephone %></strong>
            <% end %>
              </th>
              <th>
            <%= sort_link(@q, :profile_name) do %>
                <strong class="column-name"><%= t :profile %></strong>
            <% end %>
              </th>
              <th>
            <%= sort_link(@q, :buy_intention_name) do %>
                <strong class="column-name"><%= t :buy_intention %></strong>
            <% end %>
              </th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td><%= link_to person.email, edit_person_path(person) %></td>
              <td><%= person.name if person.name %><%= person.social_name if person.social_name && !person.name %></td>
              <td><%= person.rg %></td>
              <td><%= CPF.new(person.cpf).formatted if person.cpf %><%= CNPJ.new(person.cnpj).formatted if person.cnpj && !person.cpf? %></td>
              <td><%= person.telephones.first %></td>
              <td><%= person.profile.name %></td>
              <td><%= person.buy_intention.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pagination-center">
        <%= will_paginate @people, class: "pagination" %>
      </div>
    </div>
  </div>
</div>
