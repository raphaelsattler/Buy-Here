<% if @person.update_attributes(@person_params) %>
  $("#modal").modal('hide');
  $("#activerecord_errors_modal").addClass("d-none");
<% else %>
  $("#activerecord_errors_modal").removeClass("d-none");
  $("#activerecord_errors_modal").html("<%= j error_messages_helper(@person.errors.full_messages) %>");
<% end %>
