<div class="container col-md-12 card">
    <div class="text-center card-header d-flex justify-content-between" id="form-head">
      <div>
        <%= t :search_filter %>
      </div>
    </div>
    <div class="form-group card-body">
    <%= search_form_for @q, url: search_person_index_path,
                            html: { method: :get } do |f| %>
      <div class="d-flex justify-content-around">
        <div class="form-group col-md-8">
          <%= f.label :name_cont, t(:name) %>
          <%= f.search_field :name_cont, class: "form-control" %>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :cpf_cont, t(:cpf) %>
          <%= f.search_field :cpf_cont, class: "form-control" %>
        </div>
      </div>
      <div class="form-group col-md-12">
        <%= f.label :email_cont, t(:email) %>
        <%= f.search_field :email_cont, class: "form-control" %>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= link_to t(:advanced_search),
                        "#collapseAdvancedSearch", { class: "btn btn-primary col-md-8", "data-toggle": "collapse" } %>
        </div>
      </div>
      <div class="card-body">
        <div class="collapse" id="collapseAdvancedSearch">
          <div class="form-group">
            <%= f.label :social_name_cont, t(:social_name) %>
            <%= f.search_field :social_name_cont, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :rg_cont, t(:rg) %>
            <%= f.search_field :rg_cont, class: "form-control" %>
          </div>
          <div class="d-flex justify-content-around">
            <div class="text-center">
            <%= f.label :profile_name_cont, t(:profile) %>
              <%= f.collection_select :profile_name_cont, profiles, :name, :name, { include_blank: true }, { class: "btn-sm form-control" } %>
            </div>
            <div class="text-center">
              <%= f.label :buy_intention_name_cont, t(:buy_intention) %>
              <%= f.collection_select :buy_intention_name_cont, buy_intentions, :name, :name, { include_blank: true }, { class: "btn-sm form-control" } %>
            </div>
          </div>
        </div>
      </div>
      <%= f.submit class: "btn btn-md btn-success", id: "search-button" %>
    <% end %>
  </div>
</div>

<div class="card-body">
  <div class="row">
    <div class="col-md-12">
        <div class="float-right col-md-3">
          <%= link_to t(:create_person),
                      "#collapseForm", { class: "btn btn-primary col-md-8", "data-toggle": "collapse" } %>
        </div>
    </div>
  </div>
    <div class="row">
      <div class="col-md-12">
      <div class="collapse" id="collapseForm">
        <%= render file: "person/new" %>
      </div>
    </div>
  </div>
</div>
<br/>

<div class="row">
  <div class="col-md-12">
    <%= render 'list' %>
  </div>
</div>
