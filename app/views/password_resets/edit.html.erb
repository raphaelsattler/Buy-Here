<div class="row">
  <div class="col-md-6 offset-md-3">
  	<h1><%= t('password_reset.form.reset.title') %></h1>
  <%= form_with(model: @user,scope: :password_reset, url: password_reset_path, method: :patch, local: true) do |f| %>
    <%= hidden_field_tag :email, @user.email %>
    <%=  error_messsages_helper(f.object) %>
    <div class="form-group"> 
      <%= f.label :password, t('password_reset.form.reset.password.label') %>
      <%= f.password_field :password, {placeholder: t('password_reset.form.reset.password.placeholder'), class: 'form-control'} %>
    </div>
    <div class="form-group"> 
      <%= f.label :password_confirmation, t('password_reset.form.reset.password_confirmation.label') %>
      <%= f.password_field :password_confirmation, {placeholder: t('password_reset.form.reset.password_confirmation.placeholder'), class: 'form-control'} %>
    </div>
  <div class="form-group">
      <%= f.submit t('password_reset.form.reset.submit'), class: 'btn btn-info' %>
  </div>
  <%end%>
  </div>
</div>